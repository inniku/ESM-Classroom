<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-credit-card"></span> Teacher Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Teacher</h3>

				<% if (teacher.local.email) { %>
					<p>
						res.send(collection.getCollectionNames());
						<strong>id</strong>: <%= teacher._id %><br>
						<strong>email</strong>: <%= teacher.local.email %><br>
						<strong>password</strong>: <%= teacher.local.password %>
					</p>
					<div class="text-right">
						<a href="/createclass" class="btn btn-lg btn-primary btn-block">Create Class</a>
						<a href="/manageclass" class="btn btn-lg btn-info btn-block">Manage Class</a>
						<a href="/signupuser" class="btn btn-lg btn-primary btn-block">Sign up User</a>
					</div>
				<% } else { %>
					<a href="/connect/local" class="btn btn-default">Connect Local</a>
				<% } %>

			</div>
		</div>


</div>
</body>
</html>